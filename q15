QUESTION- left rotate an array by 1 place

import java.util.* ;
import java.io.*; 


public class Solution {

    static int[] rotateArray(int[] arr, int n) {
        int a= arr[0];
        for(int j=1;j<arr.length;j++){
            arr[j-1]=arr[j];
        }
        arr[arr.length-1] = a;
        return arr;
    }
}
